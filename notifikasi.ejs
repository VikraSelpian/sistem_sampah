    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        /* General Styles */
        body {
            background-color: #f4f7fa;
            color: #333;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #4CAF50;
            color: #fff;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            font-size: 24px;
        }

        .logout-button {
            color: #fff;
            text-decoration: none;
            padding: 8px 16px;
            background-color: #ff5f5f;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .logout-button:hover {
            background-color: #ff4040;
        }

        /* Sidebar */
        .sidebar {
            width: 200px;
            background-color: #ffffff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
            padding: 20px;
            position: fixed;
            top: 0;
            bottom: 0;
            overflow-y: auto;
        }

        /* Main Content */
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 22px;
            margin-bottom: 20px;
            color: #4CAF50;
        }

        .notification-area {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .notification {
            padding: 15px;
            border-left: 5px solid #4CAF50;
            background-color: #e8f5e9;
            border-radius: 6px;
            transition: transform 0.3s;
        }

        .notification:hover {
            transform: scale(1.02);
        }

        .notification h3 {
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        .notification ul {
            list-style: none;
            padding-left: 10px;
        }

        .notification ul li {
            font-size: 16px;
            margin: 5px 0;
            display: flex;
            align-items: center;
        }

        .notification ul li strong {
            color: #4CAF50;
            margin-right: 8px;
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: #4CAF50;
            color: #fff;
            font-size: 14px;
            margin-top: 20px;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
