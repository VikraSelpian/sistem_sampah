<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Pengguna</title>
    <link rel="stylesheet" href="cs.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <h1>Smart Trash Bin</h1>
        <div class="user-info">
            <!-- Profile picture with dropdown -->
            <div class="profile-dropdown">
                <img src="/uploads/<%= user.profile_picture %>" alt="Profile Picture" class="profile-pic">
                <div class="dropdown-content">
                    <a href="/settings/<%= user.id %>">Settings</a>
                    <a href="/logout" class="logout-button">Log Out</a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <!-- Sidebar Menu -->
        <div class="menu">
            <a href="/admin"><i class="fas fa-home"></i> Halaman Utama</a>
            <a href="/status"><i class="fas fa-tachometer-alt"></i> Status</a>
            <a href="/lokasi"><i class="fas fa-map-marker-alt"></i> Lokasi</a>
            <a href="/history"><i class="fas fa-history"></i> History</a>
            <a href="/users"><i class="fas fa-users"></i> Pengguna</a>
        </div>

        <!-- Content Area -->
        <div id="content-area" class="main-content">
            <h2>Data Pengguna</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>No HP</th>
                            <th>Alamat</th>
                            <th>Role</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index) => { %> 
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.no_hp %></td>
                                <td><%= user.alamat %></td>
                                <td><%= user.role %></td>
                                <td>
                                    <a href="/edit-user/<%= user.id %>">Edit</a>
                                    <form action="/delete-user/<%= user.id %>" method="POST" style="display:inline;">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <a href="/tambahuser" class="add-button">+ Tambah User</a>
        </div>
    </div>
    <footer>
        &copy; 2024 Smart Trash Bin. All Rights Reserved.
        <p>PBL TIM IOT BATAMINDO SEMESTER 3</p>
    </footer>
</body>
</html>
